
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check if the user is an admin by looking at their user document.
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    match /users/{userId} {
      allow read;
      // Only allow users to edit their own document, or admins to edit any.
      allow update: if request.auth.uid == userId || isAdmin();
      // Allow users to create their own document, and admins to create any.
      allow create: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /courses/{courseId} {
      allow read;
      allow write: if isAdmin();
    }

    match /assignments/{assignmentId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    match /discussions/{discussionId} {
      allow read;
      allow write: if isAuth();
    }

    match /certificates/{certificateId} {
        allow read: if isAuth();
        allow write: if isAdmin();
    }

    // Settings are public, but only admins can change them.
    match /settings/homepage {
        allow read;
        allow write: if isAdmin();
    }
    
    match /settings/certificate {
        allow read: if isAuth(); // Authenticated users need to read this for rendering certs
        allow write: if isAdmin();
    }
  }
}
