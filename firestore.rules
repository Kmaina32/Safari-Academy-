rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth.uid == userId;
      // Admins can manage any user
      allow read, write: if isAdmin();
    }

    match /courses/{courseId} {
        // Admins can perform any action on any course
        allow read, write: if isAdmin();

        // Anyone can read published courses
        allow read: if resource.data.status == 'Published';
    }

    match /quizzes/{quizId} {
        // Admins can do anything
        allow read, write: if isAdmin();
        
        // Logged-in students can read quizzes
        allow read: if request.auth != null;
    }

    match /certificates/{certId} {
        allow read, write: if isAdmin();
        allow read: if request.auth.uid == resource.data.userId;
    }

    match /discussions/{discussionId} {
        allow read, write: if request.auth != null;
    }
    
    match /settings/{docId} {
        // Admins can change settings
        allow write: if isAdmin();
        
        // Anyone can read homepage settings for the landing page UI
        // Authenticated users can read other settings (like for certificates)
        allow read: if docId == 'homepage' || request.auth != null;
    }

    match /maintenance/{docId} {
        allow read, write: if isAdmin();
    }
  }
}
