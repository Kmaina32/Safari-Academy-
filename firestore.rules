rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Check if the user is authenticated, exists in the users collection, and has the 'Admin' role.
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    match /users/{userId} {
      // Admins can manage all users.
      allow read, write: if isAdmin();
      // Authenticated users can read and update their own profile.
      allow read, update: if request.auth.uid == userId;
    }

    match /courses/{courseId} {
        // Anyone can read published courses. Admins can read any course.
        allow read: if resource.data.status == 'Published' || isAdmin();
        // Only admins can create, update, or delete courses.
        allow create, update, delete: if isAdmin();
    }
    
    match /quizzes/{quizId} {
      // Only admins can manage quizzes.
      allow read, write: if isAdmin();
      // Authenticated users can view quizzes.
      allow read: if request.auth != null;
    }

    match /discussions/{discussionId} {
        // Any authenticated user can read or create discussions.
        allow read, create: if request.auth != null;
        // Only admins can modify/delete discussions.
        allow write: if isAdmin();
    }
    
    match /certificates/{certId} {
        // Users can read certificates issued to them.
        allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
        // Only admins can create certificates.
        allow create: if isAdmin();
    }

    match /maintenance/settings {
        // Anyone can read maintenance settings to see if the site is down.
        allow read: if true;
        // Only admins can change maintenance settings.
        allow write: if isAdmin();
    }
    
    match /settings/homepage {
        // Anyone can read the homepage settings.
        allow read: if true;
        // Only admins can change homepage settings.
        allow write: if isAdmin();
    }
  }
}
