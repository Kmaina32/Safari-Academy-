
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for courses and homepage settings
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can create/update
    }

    match /settings/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to interact with these collections
    match /assignments/{assignmentId} {
      allow read, write: if request.auth != null;
    }

    match /discussions/{discussionId} {
      allow read, write: if request.auth != null;
    }

    // Fallback to deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
